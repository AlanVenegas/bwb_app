<% provide(:title, "Editar perfil") %>
<h1>Actualiza tu perfil</h1>

<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages' %>

<%= f.label :name, "Nombre" %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation, "Confirmar Password" %>
<%= f.password_field :password_confirmation %>

<%= f.submit "Guardar cambios", class: "btn btn-primary" %>
<% end %>

